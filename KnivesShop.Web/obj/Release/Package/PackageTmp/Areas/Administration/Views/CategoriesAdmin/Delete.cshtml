@model KnivesShop.Web.Areas.Administration.Models.CategoryDetailViewModel

@{
    ViewBag.Title = "Delete";
}

<section class="full-height-width scrolable">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Category</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.NameEn)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NameEn)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NameBg)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NameBg)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsTopCategory)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsTopCategory)
            </dd>

        </dl>
        @{
            int pageNumber = 1;
            int.TryParse(Request.QueryString["page"], out pageNumber);
        }
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
