@model KnivesShop.Web.Areas.Administration.Models.CategoryCreateViewModel

@{
    ViewBag.Title = "Create";
    int pageNumber = 1;
    int.TryParse(Request.QueryString["page"], out pageNumber);
}

<section class="full-height-width scrolable">
    <h2>Create</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Category</h4>
            <hr />

            @Html.ValidationSummary(true)
            @Html.EditorForModel()
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-dark" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index", new { page= pageNumber }, new { @class = "btn btn-default" })
    </div>
</section>